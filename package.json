{
  "name": "@syntest/javascript",
  "version": "0.0.1",
  "description": "SynTest JavaScript is a tool for automatically generating test cases for the JavaScript language",
  "keywords": [
    "syntest",
    "automatic-test-generation"
  ],
  "homepage": "https://www.syntest.org",
  "bugs": {
    "url": "https://github.com/syntest-framework/syntest-javascript/issues"
  },
  "license": "Apache-2.0",
  "contributors": [
    "Annibale Panichella",
    "Mitchell Olsthoorn",
    "Dimitri Stallenberg"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist",
    "/src/**/*.js",
    "/api.js",
    "/NOTICE"
  ],
  "bin": {
    "syntest-javascript": "dist/bin.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/syntest-framework/syntest-javascript.git"
  },
  "scripts": {
    "build": "npm run build:compile",
    "build:compile": "tsc --build",
    "build:watch": "tsc --build --watch",
    "clean": "rm -rf .nyc_output dist node_modules",
    "clean:dist": "rm -rf dist",
    "format": "prettier --config .prettierrc.json --ignore-path .prettierignore --write .",
    "format:check": "prettier  --config .prettierrc.json --ignore-path .prettierignore --check .",
    "lint": "eslint --config .eslintrc.json --ignore-path .eslintignore .",
    "lint:fix": "eslint --config .eslintrc.json --ignore-path .eslintignore . --fix",
    "prepare": "husky install",
    "run": "node ./dist/bin.js",
    "run-ts": "ts-node ./src/bin.ts",
    "test": "mocha --config .mocharc.json",
    "test:coverage": "nyc mocha --config .mocharc.json",
    "test:watch": "mocha --config .mocharc.json --watch"
  },
  "dependencies": {
    "@babel/core": "7.16.5",
    "@babel/preset-env": "7.19.1",
    "@babel/register": "7.18.9",
    "@istanbuljs/schema": "0.1.3",
    "@syntest/core": "0.2.0",
    "chai": "4.3.7",
    "chai-as-promised": "7.1.1",
    "chalk": "4.1.1",
    "clear": "0.1.0",
    "figlet": "1.5.2",
    "fs-extra": "11.1.0",
    "istanbul-lib-instrument": "5.1.0",
    "lodash.clonedeep": "4.5.0",
    "mocha": "10.2.0",
    "original-require": "1.0.1",
    "regenerator-runtime": "0.13.9"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@types/babel__core": "7.1.20",
    "@types/chai": "4.3.4",
    "@types/figlet": "1.5.4",
    "@types/mocha": "10.0.1",
    "@types/node": "18.11.17",
    "@typescript-eslint/eslint-plugin": "5.45.1",
    "@typescript-eslint/parser": "5.45.1",
    "commitlint": "17.4.2",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "prettier": "2.8.1",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "engines": {
    "node": ">=10.24.0"
  },
  "lint-staged": {
    "**/*": [
      "npx prettier --config .prettierrc.json --ignore-path .prettierignore --write .",
      "npx eslint --config .eslintrc.json --ignore-path .eslintignore --fix ."
    ]
  }
}
